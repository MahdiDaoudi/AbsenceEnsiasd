<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="absence.Controllers.EtudiantAVertissementController">
    <children>
        <!-- TableView avec propriétés responsive -->
        <TableView fx:id="tableViewAbsences" layoutX="11.0" layoutY="27.0"
                   AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                   AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="20.0">
            <!-- Définition des colonnes -->
            <columns>
                <TableColumn fx:id="colNom" text="Nom" prefWidth="100"/>
                <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="100"/>
                <TableColumn fx:id="colFiliere" text="Filière" prefWidth="100"/>
                <TableColumn fx:id="colAbsences" text="Absences" prefWidth="100"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="180"/>
                <TableColumn fx:id="colTelephone" text="Téléphone" prefWidth="120"/>
                <TableColumn fx:id="colMessage" text="Message" prefWidth="200"/>
                <TableColumn fx:id="colEnvoyerMail" text="Envoyer Mail" prefWidth="150"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
